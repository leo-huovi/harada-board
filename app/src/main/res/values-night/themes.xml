<?xml version="1.0" encoding="utf-8"?>
<!-- res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application night theme. -->
    <style name="Base.Theme.Harada" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Apply the same flat button style in night mode too -->
        <item name="android:buttonStyle">@style/FlatButton</item>
        <!-- Fix for grid/divider issues in dark mode -->
        <item name="android:divider">@null</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerPadding">0dp</item>
        <!-- Ensure no spacing between components -->
        <item name="android:listDivider">@null</item>
    </style>

    <!-- We need to redefine the FlatButton style here too -->
    <style name="FlatButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <!-- Additional fixes for dark mode button gridlines -->
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- This was missing - needs to be defined here too -->
    <style name="Theme.Harada" parent="Base.Theme.Harada" />
</resources>